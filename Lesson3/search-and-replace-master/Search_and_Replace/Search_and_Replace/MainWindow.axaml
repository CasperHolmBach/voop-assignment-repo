<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="400"
        Width="640" Height="400"
        x:Class="Search_and_Replace.Search_and_Replace.MainWindow"
        Title="Search_and_Replace">
        
        <StackPanel Spacing="20">
                
                <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0"
                        Spacing="10">
                        
                        <Button Click="OpenButton">Open File</Button>
                        <Button Click="SaveButton">Save Changes</Button>
                </StackPanel>
                
                <TextBox Name="FileShower"
                         Margin="20,0,20,0" 
                         Watermark="You File Here"
                         Height="200"
                         AcceptsReturn="True">
                </TextBox>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Spacing="10">
                        <TextBox 
                                Name="SearchBox"
                                Watermark="Search"
                                Width="100">
                        </TextBox>
                        <TextBox 
                                Name="ReplaceBox"
                                Watermark="Replace"
                                Width="100">
                        </TextBox>
                        <Button Click="ReplaceButton">Replace All</Button>
                </StackPanel>
                
                
        </StackPanel>
</Window>
